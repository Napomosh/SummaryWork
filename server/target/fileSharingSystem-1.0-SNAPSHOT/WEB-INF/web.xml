<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>auth.StartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>auth.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>main</servlet-name>
        <servlet-class>controller.MainServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>main</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-class>controller.DownloadServlet</servlet-class>
        <servlet-name>download</servlet-name>
    </servlet>
    <servlet-mapping>
        <servlet-name>download</servlet-name>
        <url-pattern>/download</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>upload</servlet-name>
        <servlet-class>controller.UploadReportServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>upload</servlet-name>
        <url-pattern>/upload</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>uploadSources</servlet-name>
        <servlet-class>controller.UploadSourcesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>uploadSources</servlet-name>
        <url-pattern>/uploadSources</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>uploadRule</servlet-name>
        <servlet-class>controller.AddRuleFile</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>uploadRule</servlet-name>
        <url-pattern>/uploadRule</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>sharing</servlet-name>
        <servlet-class>controller.Checker</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sharing</servlet-name>
        <url-pattern>/sharing</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>search</servlet-name>
        <servlet-class>controller.AddSourcePath</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>search</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>delete</servlet-name>
        <servlet-class>controller.DeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>delete</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>generate</servlet-name>
        <servlet-class>controller.GenerateLinksServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>generate</servlet-name>
        <url-pattern>/generate</url-pattern>
    </servlet-mapping>
</web-app>
